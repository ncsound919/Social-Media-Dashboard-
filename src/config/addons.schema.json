{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Addon Configuration Schema",
  "description": "Schema for validating addon dashboard configuration including widgets, automation rules, and metadata",
  "type": "object",
  "required": ["addons"],
  "properties": {
    "addons": {
      "type": "object",
      "description": "Collection of addon groups, each defining dashboard cards and navigation",
      "patternProperties": {
        "^[a-z0-9_-]+$": {
          "$ref": "#/definitions/AddonGroup"
        }
      }
    }
  },
  "definitions": {
    "AddonGroup": {
      "type": "object",
      "required": ["id", "label", "navigation_group", "dashboard_cards"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the addon group"
        },
        "label": {
          "type": "string",
          "description": "Display name for the addon group"
        },
        "navigation_group": {
          "type": "string",
          "description": "Navigation category for grouping in UI"
        },
        "dashboard_cards": {
          "type": "array",
          "description": "Array of dashboard widget configurations",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/MetricGridCard" },
              { "$ref": "#/definitions/RecurringSlotListCard" },
              { "$ref": "#/definitions/LibraryCard" },
              { "$ref": "#/definitions/KanbanBoardCard" },
              { "$ref": "#/definitions/AutomationPanelCard" },
              { "$ref": "#/definitions/BriefGeneratorCard" },
              { "$ref": "#/definitions/TimelineBoardCard" },
              { "$ref": "#/definitions/ExperimentMatrixCard" },
              { "$ref": "#/definitions/BulkUploadPanelCard" },
              { "$ref": "#/definitions/ListeningDashboardCard" },
              { "$ref": "#/definitions/AnalyticsPanelCard" },
              { "$ref": "#/definitions/ApprovalBoardCard" },
              { "$ref": "#/definitions/PreviewPanelCard" },
              { "$ref": "#/definitions/LinkManagerCard" },
              { "$ref": "#/definitions/AISuggestionPanelCard" },
              { "$ref": "#/definitions/OptimizationPanelCard" },
              { "$ref": "#/definitions/CalendarViewCard" },
              { "$ref": "#/definitions/UnifiedDashboardCard" },
              { "$ref": "#/definitions/CompetitorTrackerCard" },
              { "$ref": "#/definitions/ReportGeneratorCard" },
              { "$ref": "#/definitions/AdTrackerCard" }
            ]
          }
        }
      }
    },
    "MetricGridCard": {
      "type": "object",
      "required": ["id", "type", "title", "metrics", "time_range_default"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "metric_grid" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "metrics": {
          "type": "array",
          "description": "Array of metric identifiers to display",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "time_range_default": {
          "type": "string",
          "description": "Default time range for metrics",
          "enum": ["last_7_days", "last_30_days", "last_90_days", "custom"]
        }
      }
    },
    "RecurringSlotListCard": {
      "type": "object",
      "required": ["id", "type", "title", "fields"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "recurring_slot_list" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "fields": {
          "type": "array",
          "description": "Fields to display for each recurring slot",
          "items": { "type": "string" }
        }
      }
    },
    "LibraryCard": {
      "type": "object",
      "required": ["id", "type", "title"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "library" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "item_types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tags_enabled": { "type": "boolean" },
        "actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "KanbanBoardCard": {
      "type": "object",
      "required": ["id", "type", "title", "columns"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "kanban_board" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "columns": {
          "type": "array",
          "description": "Column identifiers for the kanban board",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "swimlanes": {
          "type": "array",
          "description": "Optional swimlane grouping dimensions",
          "items": {
            "type": "string",
            "enum": ["platform", "campaign", "user", "priority"]
          }
        }
      }
    },
    "AutomationPanelCard": {
      "type": "object",
      "required": ["id", "type", "title"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "automation_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "rules": {
          "type": "array",
          "description": "Automation rules with triggers, conditions, and actions",
          "items": {
            "$ref": "#/definitions/AutomationRule"
          }
        }
      }
    },
    "AutomationRule": {
      "type": "object",
      "required": ["id", "trigger", "conditions", "actions"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique rule identifier"
        },
        "trigger": {
          "type": "string",
          "description": "Event that activates the rule",
          "enum": [
            "post_published",
            "before_schedule",
            "metric_threshold_reached",
            "time_based",
            "manual_trigger"
          ]
        },
        "conditions": {
          "type": "array",
          "description": "Conditions evaluated as expressions (e.g., 'engagement_rate > threshold')",
          "items": { "type": "string" }
        },
        "actions": {
          "type": "array",
          "description": "Actions to execute when conditions are met",
          "items": {
            "type": "string",
            "enum": [
              "mark_evergreen",
              "add_to_recycle_queue",
              "warn_user",
              "suggest_alternative_slot",
              "send_notification",
              "update_status"
            ]
          }
        }
      }
    },
    "BriefGeneratorCard": {
      "type": "object",
      "required": ["id", "type", "title", "brief_templates", "fields"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "brief_generator" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "brief_templates": {
          "type": "array",
          "description": "Available brief template types",
          "items": { "type": "string" }
        },
        "fields": {
          "type": "array",
          "description": "Fields required for brief generation",
          "items": { "type": "string" }
        }
      }
    },
    "TimelineBoardCard": {
      "type": "object",
      "required": ["id", "type", "title", "fields"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "timeline_board" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "fields": {
          "type": "array",
          "description": "Fields for timeline arc entries",
          "items": { "type": "string" }
        }
      }
    },
    "ExperimentMatrixCard": {
      "type": "object",
      "required": ["id", "type", "title", "dimensions", "metrics"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "experiment_matrix" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "dimensions": {
          "type": "array",
          "description": "Experiment variables to test",
          "items": { "type": "string" }
        },
        "metrics": {
          "type": "array",
          "description": "Metrics to track for experiments",
          "items": { "type": "string" }
        }
      }
    },
    "BulkUploadPanelCard": {
      "type": "object",
      "required": ["id", "type", "title", "supported_formats", "fields"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "bulk_upload_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "supported_formats": {
          "type": "array",
          "description": "File formats supported for bulk upload",
          "items": { "type": "string" }
        },
        "fields": {
          "type": "array",
          "description": "Required fields for bulk upload",
          "items": { "type": "string" }
        }
      }
    },
    "ListeningDashboardCard": {
      "type": "object",
      "required": ["id", "type", "title", "metrics", "time_range_default"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "listening_dashboard" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "metrics": {
          "type": "array",
          "description": "Listening metrics to display",
          "items": { "type": "string" }
        },
        "time_range_default": {
          "type": "string",
          "description": "Default time range for metrics",
          "enum": ["last_7_days", "last_30_days", "last_90_days", "custom"]
        }
      }
    },
    "AnalyticsPanelCard": {
      "type": "object",
      "required": ["id", "type", "title", "metrics", "time_range_default"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "analytics_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "metrics": {
          "type": "array",
          "description": "Analytics metrics to track",
          "items": { "type": "string" }
        },
        "time_range_default": {
          "type": "string",
          "description": "Default time range for analytics",
          "enum": ["last_7_days", "last_30_days", "last_90_days", "custom"]
        }
      }
    },
    "ApprovalBoardCard": {
      "type": "object",
      "required": ["id", "type", "title", "columns", "permissions"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "approval_board" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "columns": {
          "type": "array",
          "description": "Approval workflow stages",
          "items": { "type": "string" }
        },
        "permissions": {
          "type": "array",
          "description": "User permission levels",
          "items": { "type": "string" }
        }
      }
    },
    "PreviewPanelCard": {
      "type": "object",
      "required": ["id", "type", "title", "platforms"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "preview_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "platforms": {
          "type": "array",
          "description": "Platforms to preview content for",
          "items": { "type": "string" }
        }
      }
    },
    "LinkManagerCard": {
      "type": "object",
      "required": ["id", "type", "title", "fields"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "link_manager" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "fields": {
          "type": "array",
          "description": "Fields for link management",
          "items": { "type": "string" }
        }
      }
    },
    "AISuggestionPanelCard": {
      "type": "object",
      "required": ["id", "type", "title", "features"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "ai_suggestion_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "features": {
          "type": "array",
          "description": "AI features available",
          "items": { "type": "string" }
        }
      }
    },
    "OptimizationPanelCard": {
      "type": "object",
      "required": ["id", "type", "title", "tip_categories"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "optimization_panel" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "tip_categories": {
          "type": "array",
          "description": "Categories of optimization tips",
          "items": { "type": "string" }
        }
      }
    },
    "CalendarViewCard": {
      "type": "object",
      "required": ["id", "type", "title", "views", "filters"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "calendar_view" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "views": {
          "type": "array",
          "description": "Available calendar views",
          "items": { "type": "string" }
        },
        "filters": {
          "type": "array",
          "description": "Filters for calendar content",
          "items": { "type": "string" }
        }
      }
    },
    "UnifiedDashboardCard": {
      "type": "object",
      "required": ["id", "type", "title", "platforms", "metrics", "time_range_default"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "unified_dashboard" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "platforms": {
          "type": "array",
          "description": "Platforms included in unified view",
          "items": { "type": "string" }
        },
        "metrics": {
          "type": "array",
          "description": "Unified metrics to display",
          "items": { "type": "string" }
        },
        "time_range_default": {
          "type": "string",
          "description": "Default time range for unified analytics",
          "enum": ["last_7_days", "last_30_days", "last_90_days", "custom"]
        }
      }
    },
    "CompetitorTrackerCard": {
      "type": "object",
      "required": ["id", "type", "title", "features"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "competitor_tracker" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "features": {
          "type": "array",
          "description": "Competitor tracking features",
          "items": { "type": "string" }
        }
      }
    },
    "ReportGeneratorCard": {
      "type": "object",
      "required": ["id", "type", "title", "report_types", "export_formats"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "report_generator" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "report_types": {
          "type": "array",
          "description": "Available report types",
          "items": { "type": "string" }
        },
        "export_formats": {
          "type": "array",
          "description": "Supported export formats",
          "items": { "type": "string" }
        }
      }
    },
    "AdTrackerCard": {
      "type": "object",
      "required": ["id", "type", "title", "platforms", "metrics"],
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "ad_tracker" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "platforms": {
          "type": "array",
          "description": "Ad platforms to track",
          "items": { "type": "string" }
        },
        "metrics": {
          "type": "array",
          "description": "Ad metrics to monitor",
          "items": { "type": "string" }
        }
      }
    }
  }
}
